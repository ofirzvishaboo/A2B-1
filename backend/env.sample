# Database Configuration
# Required for Docker Compose to initialize the database
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=a2bdb

# Database Connection String
# For local development (outside Docker), use localhost
# Docker Compose will override the host to 'postgres' automatically
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/a2bdb

# Security
# Required for accessing protected endpoints (like GET /api/contact)
ADMIN_API_KEY=change_this_to_a_secure_key
OPENAI_API_KEY=sk-...

# Project Settings
PROJECT_NAME=Backend API
API_V1_STR=/api/v1
